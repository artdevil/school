<div class="row-fluid">
	<div class="span12">
        <div class="well">
			<div class="row-fluid">
				<div class="span8">
					<h1>Student Information</h1>
				</div>
			</div>
    	</div>
	</div>
</div>
<div class="row-fluid">
	<div class="span9">
        <div class="well">
			<h3>Common Information</h3>
			<hr />
			<div class="table">
				<div class="table-row">
					<div class="t2">Name</div><div class="t1">:</div><div class="t8"><%= @student.name %></div>
				</div>
				<div class="table-row">
					<div class="t2">NIS</div><div class="t1">:</div><div class="t8"><%= @student.nis %></div>
				</div>
				<div class="table-row">
					<div class="t2">Email</div><div class="t1">:</div><div class="t8"><%= @student.email %></div>
				</div>
				<div class="table-row">
					<div class="t2">Gender</div><div class="t1">:</div><div class="t8"><%= @student.gender %></div>
				</div>
				<div class="table-row">
					<div class="t2">place / birth day</div>
					<div class="t1">:</div>
					<div class="t8"><%= @student.birth_place %> / <%= @student.birth_day.strftime("%d %B %Y")%></div>
				</div>
				<div class="table-row">
					<div class="t2">Religion</div><div class="t1">:</div><div class="t8"><%= @student.religion %></div>
				</div>
			</div>
			<br />
			<h3>Address Information</h3>
			<hr />
			<div class="table">
				<div class="table-row">
					<div class="t2">Address 1</div><div class="t1">:</div><div class="t8"><%= @student.address.line_1 %></div>
				</div>
				<% if !@student.address.line_2 %>
					<div class="table-row">
						<div class="t2">Address 2</div><div class="t1">:</div><div class="t8"><%= @student.address.line_2 %></div>
					</div>
				<% end %>
				<div class="table-row">
					<div class="t2">City</div><div class="t1">:</div><div class="t8"><%= @student.address.city %></div>
				</div>
				<div class="table-row">
					<div class="t2">Province</div><div class="t1">:</div><div class="t8"><%= @student.address.province %></div>
				</div>
				<div class="table-row">
					<div class="t2">Country</div><div class="t1">:</div><div class="t8"><%= @student.address.country %></div>
				</div>
				<div class="table-row">
					<div class="t2">Telephone</div><div class="t1">:</div><div class="t8"><%= @student.address.telephone %></div>
				</div>
				<% if !@student.address.mobile %>
					<div class="table-row">
						<div class="t2">Mobile</div><div class="t1">:</div><div class="t8"><%= @student.address.mobile %></div>
					</div>
				<% end %>
			</div>
			<br />
			<h3>Class Information</h3>
			<hr />
			<div class="table">
				<div class="table-row">
					<div class="t2">Class</div><div class="t1">:</div><div class="t8"><%= @student.level %></div>
				</div>
				<div class="table-row">
					<div class="t2">Wali kelas</div><div class="t1">:</div><div class="t8"><%= @student.teacher.name %></div>
				</div>
			</div>
			<br />
			<h3>Parents Information</h3>
			<hr />
			<div class="table">
				<div class="table-row">
					<div class="t2">Mother name</div><div class="t1">:</div><div class="t8"><%= @student.parent.mother_name %></div>
				</div>
				<div class="table-row">
					<div class="t2">Mother job</div><div class="t1">:</div><div class="t8"><%= @student.parent.mother_job %></div>
				</div>
				<div class="table-row">
					<div class="t2">Mother phone</div><div class="t1">:</div><div class="t8"><%= @student.parent.mother_phone %></div>
				</div>
				<div class="table-row">
					<div class="t2">Father name</div><div class="t1">:</div><div class="t8"><%= @student.parent.father_name %></div>
				</div>
				<div class="table-row">
					<div class="t2">Father job</div><div class="t1">:</div><div class="t8"><%= @student.parent.father_job %></div>
				</div>
				<div class="table-row">
					<div class="t2">Father phone</div><div class="t1">:</div><div class="t8"><%= @student.parent.father_phone %></div>
				</div>
				<% if !@student.parent.carers_name && !@student.parent.carers_job && !@student.parent.carers_phone %>
					<div class="table-row">
						<div class="t2">Father name</div><div class="t1">:</div><div class="t8"><%= @student.parent.father_name %></div>
					</div>
					<div class="table-row">
						<div class="t2">Father job</div><div class="t1">:</div><div class="t8"><%= @student.parent.father_job %></div>
					</div>
					<div class="table-row">
						<div class="t2">Father phone</div><div class="t1">:</div><div class="t8"><%= @student.parent.father_phone %></div>
					</div>
				<% end %>
			</div>
			<%= link_to "back", :back , :class => "btn btn-primary" %>
    	</div>
	</div>
	<div class="span3">
		<div class="well">
			<h3>Profile Picture</h3>
			<hr />
			<div class="row-fluid">
				<div class="span2">
					&nbsp;
				</div>
				<div class="span4">
					<%= image_tag(@student.photo_student_url.to_s) %>
				</div>
			</div>
		</div>
	</div>
</div>

