<div class="row-fluid">
	<div class="span12">
        <div class="well">
			<div class="row-fluid">
				<div class="span8">
					<h1>User Teachers</h1>
				</div>
				<div class="span4 padding-top-up-5 text-right">
					<%= link_to 'Add teacher',new_teacher_path, :class=> "btn btn-primary btn-large" %>
				</div>
			</div>
    	</div>
	</div>
</div>
<div class="row-fluid">
	<div class="span9">
        <div class="well">
			<div class="table">
				<div class="table-row">
					<div class="t1 head no">No</div>
					<div class="t2 head"><%= sortable "nip" %></div>
					<div class="t2 head"><%= sortable "name" %></div>
					<div class="t2 head"><%= sortable "email" %></div>
					<div class="t2 head"><%= sortable "level" %></div>
					<div class="t3 head">&nbsp;</div>
				</div>
				<% a = 1%>
				<% @teachers.each do |f| %>
					<div class="table-row <%= cycle('odd', 'even') %>">
						<div class="t1 no"><%= a %></div>
						<div class="t2"><%= f.nip %></div>
						<div class="t2"><%= f.name %></div>
						<div class="t2"><%= f.email %></div>
						<div class="t2"><%= f.level %></div>
						<div class="t3 action">
							<%= link_to 'show',teacher_path(f), :class => 'margin-right-10' %> 
							<%= link_to 'edit',edit_teacher_path(f),:class => 'margin-right-10' %>
							<%= link_to 'delete', f,:method => :delete, :confirm => "are you sure ?",:class => 'margin-right-10' %>
						</div>
					</div>
					<% a= a+1 %>
				<% end %>
			</div>
			<hr />
			<div class="paging">
				<%= paginate @teachers %>
			</div>
    	</div>
	</div>
	<div class="span3">
		<div class="well">
			<h3>Filter Search</h3>
			<br />
			<%= form_for @search, :url => teachers_path, :html => {:method => :get} do |f| %>
				<%= f.label :nip %>
				<%= f.text_field :nip_contains %>
				<%= f.label :name %>
				<%= f.text_field :name_contains %>
				<%= f.label :email %>
				<%= f.text_field :email_contains %>
				<%= f.label :level %>
				<%= f.text_field :level_contains %>
				<%= f.submit :search, :class => "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
